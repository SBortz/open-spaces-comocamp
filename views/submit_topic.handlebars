
    <div class="container" style="display: flex; flex-direction: column; align-items: center;">

        <div class="vertical-stack">
            <table>
                <tr>
                    <td>Logged in as:</td>
                    <td>{{username}}</td>
                </tr>
                <tr>
                    <td>VR Conference ID:</td>
                    <td>{{VRconferenceId}}</td>
                </tr>
            </table>
            <style>
                .events-table table {
                    width: 100%;
                    border-collapse: collapse;
                }
                .events-table th, .events-table td {
                    border: 1px solid black;
                    padding: 8px;
                    text-align: left;
                }
                .events-table th {
                    background-color: #f2f2f2;
                }
            </style>
            <div class="events-table">
                <table>
                    <thead>
                        <tr>
                            <th>Timestamp</th>
                            <th>ID</th>
                            <th>Request ID</th>
                            <th>Type</th>
                            <th>Voter ID</th>
                            <th>Open Space ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each allEventsMap}}
                        <tr>
                            <td>{{this.timestamp}}</td>
                            <td>{{this.id}}</td>
                            <td>{{this.requestId}}</td>
                            <td>{{this.type}}</td>
                            <td>{{this.voterId}}</td>
                            <td>{{this.openSpaceId}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

        <h1>Topics for {{eventName}}</h1>

        <div class="topics-table">
            <table>
                <thead>
                    <tr>
                        <th>Topic Names</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each topics}}
                    <tr>
                        <td>{{this.name}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <div class="form-container">
            <form action="/submit_topic" method="POST">
                
                <div class="form-group">
                    <label for="name">Topic Name:</label>
                    <textarea id="topic" name="name" required rows="5"></textarea>
                </div>

                <button type="submit" class="continue-button">Submit</button>
                <input type="hidden" id="id" name="id" value="{{id}}">
            </form>
        </div>

        <div class="voting-link">
            <a href="/topic_voting?conferenceId={{id}}">
                <button class="vote-button">Go to Topic Voting</button>
            </a>
        </div>


    </div>
